<link rel="stylesheet" href="/css/style.css">
{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body card-signup">
            <div class="signup-card">
                <h1 class="text-center text">Sign Up Now</h1>
                <form action="/users/signup" method="post">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" value="{{name}}" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" value="{{email}}" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" value="{{password}}" name="password" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Confirm Password</label>
                        <input type="password2" class="form-control" value="{{password2}}" name="password2" required>
                    </div>
                    <button type="submit" class="btn btn-secondary">Submit</button>
                </form>
         
            </div>
            
        </div>
    </div>
</div>